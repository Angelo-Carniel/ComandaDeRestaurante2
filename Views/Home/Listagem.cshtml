@model List<ItemPedido>

<h2> Pedido Final </h2>
<table>
   <thead>
       <tr>
           <th>Descrição</th>
           <th>Quantidade</th>
           <th>Valor</th>
       </tr>
   </thead>
   <tbody>
       @foreach (ItemPedido a in Model)
       {
       <tr>
           <td>@a.Descricao</td>
           <td>@a.Quantidade</td>
           <td>@a.Valor</td>
       </tr>
       }
   </tbody>
</table>
<a asp-action="Formulario">Cadastrar novo pedido</a>